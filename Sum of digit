class Main{
    public static void main (String[] args) {
        int num=1234;
        int temp=0;
        int sum=0;
        while(num>0){
            temp=num % 10;
            sum=sum + temp;
            num=num / 10;
        }
        System.out.println(sum);
    
         int temp1=0;
         int total=0;
         while(sum>0){
             temp1=sum%10;
             total=total+temp1;
             sum=sum/10;
         }
         System.out.println(total);
    }
    
}
