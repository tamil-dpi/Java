import java.util.Scanner;                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     import java.util.Scanner;
class Main{
    public static void main(String [] args){
        Scanner sc= new Scanner (System.in);
        int num1= sc.nextInt();
        int num2= sc.nextInt();
        int num3= sc.nextInt();
        int num4= sc.nextInt();
        int c = num1+num3;
        System.out.println(c);
        double d= c/2;
        System.out.println(d);
        int c1 = num2+num4;
        System.out.println(c1);
        double d1= c1/2;
        System.out.println(d1);
    }
}                                                                                                       
