class Triangle{
    public void display(int a){
        for(int i=1;i<=a;i++){
            for(int j=1;j<=i;j++){
                System.out.print("l" +"  ");
            }
            System.out.println();
        }
    }
    
}
public class Main{
    public static void main(String [] args){
        Triangle triangle = new Triangle();
        triangle.display(5);
    }
}
